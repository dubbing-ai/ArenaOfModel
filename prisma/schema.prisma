generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  state String
}

model Rating {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  clientId  String
  state     TestState
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  answers   Answer[]
}

type Answer {
  type  AnswerType
  wavId String
  score Int
}

enum TestState {
  ONE
  TWO
  THREE
  FOUR
  FIVE
  SIX
  SEVEN
  DONE
}

enum AnswerType {
  NATURALNESS
  SIMILARITY
}
